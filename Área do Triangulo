print('========Area do triangulo========')
ladoa = int(input('Informe o lado A: '))
ladob = int(input('Informe o lado B: '))
ladoc = int(input('Informe o lado C: '))

import math
if ladoa > (ladob + ladoc):
    print ('Se A > B + C nao formam triangulo algum, se A é o maior')
else:
    perimetro = (ladoa + ladob + ladoc) / 2
    area = perimetro * (perimetro - ladoa) * (perimetro - ladob) * (perimetro - ladoc)
    areaF = math.sqrt(area)
    print('A area do triangulo é: %f'% areaF)
print('=================================')    
